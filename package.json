{
  "name": "npx-shiatsu-guyane",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:perf": "lhci autorun",
    "test:load": "artillery run load-test.js",
    "test:load:staging": "artillery run load-test.js --target https://staging.shiatsu-guyane.fr",
    "test:staging": "PLAYWRIGHT_BASE_URL=https://staging.shiatsu-guyane.fr playwright test",
    "test:production-smoke": "playwright test e2e/smoke-tests.spec.ts",
    "test:all": "npm run lint && npm run test && npm run build && npm run test:e2e",
    "analyze": "cross-env ANALYZE=true npm run build",
    "lighthouse": "lhci autorun --collect.url=http://localhost:3000",
    "lighthouse:staging": "lhci autorun --collect.url=https://staging.shiatsu-guyane.fr"
  },
  "dependencies": {
